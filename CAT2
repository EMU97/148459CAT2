//Write a function called checkEven() that receives an integer as a parameter and returns true if the parameter is an even number and false otherwise (if the integer odd).
#include <iostream>
using namespace std;
bool checkEven(int num){

    bool b;
    
    if (num % 2== 0)
        b= true;

    else
         b= false;

    return b;
}

int main(){
    int num;
    bool isEven;

    cout<< "Enter any number: ";
    cin>> num;

    isEven = checkEven(num);
    
    if(isEven)
    cout<<num<<" Is an even number";

    else
    cout<<num<<" Enter another number ";

    return 0;

}

II)
#include <iostream>
using namespace std;
int num1, num2, num3;
int maximum;

// Define the max() function
int max( int num1, int num2, int num3){
    // Initialize the maximum value to be the first integer
    int max = num1;

// Compare the second integer to the maximum value and update the maximum value if necessary
    if (num2> max){
        max = num2;
    }

// Compare the third integer to the maximum value and update the maximum value if necessary
    if (num3> max){
        max= num3;
    }

    else;
    return max;

}
int main(){
     // Declare variables to store the three integers
    int num1, num2, num3;

    cout<< "Enter three integers: ";
    cin>> num1;
    cin>> num2;
    cin>> num3;
  // Call the max() function to find the maximum of the three integers and store the result in a variable
    int maximum= max(num1, num2, num3);

     
    cout<<maximum<< " is the largest number among the integers";

return 0;


}

QUESTION FOUR
#include <iostream>

using namespace std;

// Function that receives an array of 7 student marks as a parameter
// and returns the average of the marks
float markAverage(float marks[])
{
    float sum = 0;
    // Calculate the sum of the marks
    for (int i = 0; i < 7; i++)
    {
        sum += marks[i];
    }
    // Return the average
    return sum / 7;
}

int main()
{
    // Array to store the 7 student marks
    float marks[7];

    // Prompt the user to enter the 7 marks
    cout << "Enter the 7 marks:" << endl;
    for (int i = 0; i < 7; i++)
    {
        cout << "Mark " << i + 1 << ": ";
        cin >> marks[i];
    }

    // Call the markAverage function and store the result
    float average = markAverage(marks);

    // Display the average to the user
    cout << "The average of the marks is " << average << endl;

    return 0;
}






